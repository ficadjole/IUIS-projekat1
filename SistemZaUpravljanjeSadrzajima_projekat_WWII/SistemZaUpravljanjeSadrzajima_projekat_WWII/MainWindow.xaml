<Window x:Class="SistemZaUpravljanjeSadrzajima_projekat_WWII.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemZaUpravljanjeSadrzajima_projekat_WWII"
        mc:Ignorable="d"
        Title="Prijava" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40">Prijavi se</TextBlock>

        <Grid Grid.Row="1" Margin="5 0 5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15">Korisnicko ime: </Label>
            <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15">Lozinka: </Label>

            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBox Grid.Row="0" VerticalAlignment="Center" Width="190" x:Name="txtBoxName"/>
                <Label  
                    Grid.Row="1"
                    x:Name="UserNameErrorLable"
                    Width="190"
                    Height="25"
                    Foreground="Red"
                    />
                
                
            </Grid>


            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" VerticalAlignment="Center" Width="190" x:Name="txtBoxPassword"/>
                <Label  
                    Grid.Row="1"
                    x:Name="PasswordErrorLable"
                    Width="190"
                    Height="25"
                    Foreground="Red"/>


            </Grid>
            

        </Grid>

        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="25" FontSize="15" x:Name="btnLogin" Click="btnLogin_Click">Prijavi se</Button>

    </Grid>
</Window>
