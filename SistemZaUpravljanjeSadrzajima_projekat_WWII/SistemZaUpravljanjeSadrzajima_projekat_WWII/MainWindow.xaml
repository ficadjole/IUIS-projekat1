<Window
    x:Class="SistemZaUpravljanjeSadrzajima_projekat_WWII.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/svg"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:SistemZaUpravljanjeSadrzajima_projekat_WWII"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Prijava"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Canvas Width="800" Height="600">

        <Path
            x:Name="UIPath"
            Width="800"
            Height="600"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Fill="DarkOliveGreen"
            Stretch="Fill"
            Stroke="DarkGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="200,0">
                        <LineSegment Point="150,20" />
                        <LineSegment Point="0,20" />
                        <LineSegment Point="0,50" />
                        <LineSegment Point="150,50" />
                        <LineSegment Point="150,80" />
                        <LineSegment Point="40,80" />
                        <LineSegment Point="10,160" />
                        <LineSegment Point="40,240" />
                        <LineSegment Point="350,240" />
                        <LineSegment Point="380,160" />
                        <LineSegment Point="350,80" />
                        <LineSegment Point="310,80" />
                        <LineSegment Point="310,20" />
                        <LineSegment Point="260,0" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Path
            Canvas.Left="440"
            Canvas.Top="70"
            Width="100"
            Height="100"
            Fill="RED"
            Stretch="Fill"
            Stroke="LightYellow"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="100,0">
                            <PathFigure.Segments>
                                <LineSegment Point="75,20" />
                                <LineSegment Point="0,20" />
                                <LineSegment Point="50,40" />
                                <LineSegment Point="20,70" />
                                <LineSegment Point="100,50" />
                                <LineSegment Point="180,70" />
                                <LineSegment Point="150,40" />
                                <LineSegment Point="200,20" />
                                <LineSegment Point="130,20" />
                                <LineSegment Point="100,0" />
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
        <DockPanel
            Canvas.Left="110"
            Canvas.Top="220"
            Width="600"
            Height="350">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="40"
                    FontWeight="ExtraBold">
                    Login
                </TextBlock>



                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="ExtraBold">
                    Username:
                </Label>
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="ExtraBold">
                    Password:
                </Label>


                <TextBox
                    x:Name="txtBoxName"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="200"
                    Height="22"
                    VerticalAlignment="Center"
                    FontSize="15"
                    GotFocus="txtBoxName_GotFocus"
                    LostFocus="txtBoxName_LostFocus" />
                <Label
                    x:Name="UserNameErrorLable"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="190"
                    Height="25"
                    Foreground="Red" />


                <PasswordBox
                    x:Name="txtBoxPassword"
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="200"
                    Height="22"
                    VerticalAlignment="Center"
                    FontSize="15"
                    FontWeight="ExtraBold" />
                <Label
                    x:Name="PasswordErrorLable"
                    Grid.Row="4"
                    Grid.Column="1"
                    Width="190"
                    Height="25"
                    Foreground="Red" />


                <Button
                    x:Name="btnLogin"
                    Grid.Row="5"
                    Grid.Column="0"
                    Width="150"
                    Height="46"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="btnLogin_Click"
                    Cursor="Hand"
                    FontSize="20"
                    FontWeight="ExtraBold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0" Text="Login" />
                        <fa:SvgAwesome
                            Height="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Icon="Solid_PersonMilitaryRifle" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnClose"
                    Grid.Row="5"
                    Grid.Column="1"
                    Width="150"
                    Height="46"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="btnClose_Click"
                    Cursor="Hand"
                    FontSize="20"
                    FontWeight="ExtraBold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0" Text="Close" />
                        <fa:SvgAwesome
                            Height="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Icon="Solid_SkullCrossbones"
                            PrimaryColor="Black" />
                    </StackPanel>
                </Button>
            </Grid>
        </DockPanel>
    </Canvas>
</Window>
