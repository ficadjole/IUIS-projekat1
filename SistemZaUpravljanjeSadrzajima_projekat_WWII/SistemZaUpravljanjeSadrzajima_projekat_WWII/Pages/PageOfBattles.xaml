<Window
    x:Class="SistemZaUpravljanjeSadrzajima_projekat_WWII.PageOfBattles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/svg"
    xmlns:local="clr-namespace:SistemZaUpravljanjeSadrzajima_projekat_WWII"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:source="*"
    Title="DataTable"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Canvas Width="800" Height="600">

        <Path
            x:Name="UIPath"
            Width="800"
            Height="600"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Fill="DarkOliveGreen"
            Stretch="Fill"
            Stroke="DarkGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="200,0">
                        <LineSegment Point="150,20" />
                        <LineSegment Point="0,20" />
                        <LineSegment Point="0,50" />
                        <LineSegment Point="150,50" />
                        <LineSegment Point="150,80" />
                        <LineSegment Point="40,80" />
                        <LineSegment Point="10,160" />
                        <LineSegment Point="40,240" />
                        <LineSegment Point="350,240" />
                        <LineSegment Point="380,160" />
                        <LineSegment Point="350,80" />
                        <LineSegment Point="310,80" />
                        <LineSegment Point="310,20" />
                        <LineSegment Point="260,0" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Path
            Canvas.Left="440"
            Canvas.Top="70"
            Width="100"
            Height="100"
            Fill="RED"
            Stretch="Fill"
            Stroke="LightYellow"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="100,0">
                            <PathFigure.Segments>
                                <LineSegment Point="75,20" />
                                <LineSegment Point="0,20" />
                                <LineSegment Point="50,40" />
                                <LineSegment Point="20,70" />
                                <LineSegment Point="100,50" />
                                <LineSegment Point="180,70" />
                                <LineSegment Point="150,40" />
                                <LineSegment Point="200,20" />
                                <LineSegment Point="130,20" />
                                <LineSegment Point="100,0" />



                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
        <DockPanel
            Canvas.Left="110"
            Canvas.Top="220"
            Width="600"
            Height="350">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="300" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>


                <DataGrid
                    x:Name="dataGridBattles"
                    Grid.ColumnSpan="3"
                    Margin="5"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding Battles}">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="FontSize" Value="12" />
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Height" Value="175" />
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="FontWeight" Value="ExtraBold" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="Background" Value="#FFDDDDDD" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn x:Name="dataGridColumnDelete" Visibility="Hidden">
                            <DataGridTemplateColumn.Header>
                                <CheckBox
                                    x:Name="chckBoxSelectAll"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Click="chckBoxSelectAll_Click"
                                    Content="Select All" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        x:Name="chckBox"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Click="chckBox_Click"
                                        IsChecked="{Binding Selected}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="150" Header="Battle name">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Hyperlink x:Name="HyperLinkItem" Click="HyperLinkItem_Click">

                                            <Hyperlink.Resources>
                                                <Style TargetType="Run">
                                                    <Setter Property="Foreground" Value="Black" />
                                                    <Setter Property="TextDecorations" Value="None" />
                                                </Style>
                                            </Hyperlink.Resources>

                                            <Run Text="{Binding NameOfBattle}" />
                                        </Hyperlink>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="*" Header="Battle Image">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding ImgUrl}" Stretch="Fill" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn
                            Width="100"
                            Header="Date added"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding TimeAdded}"
                                        TextWrapping="Wrap" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>


                <Button
                    x:Name="btnAdd"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    Click="btnAdd_Click"
                    Cursor="Hand"
                    FontSize="20"
                    FontWeight="ExtraBold"
                    Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            FontWeight="ExtraBold"
                            Text="Add Battle" />
                        <fa:SvgAwesome
                            Height="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Icon="Solid_Crosshairs"
                            PrimaryColor="Black" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnDelete"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Click="btnDelete_Click"
                    Cursor="Hand"
                    FontSize="20"
                    FontWeight="ExtraBold"
                    Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0" Text="Delete" />
                        <fa:SvgAwesome
                            Height="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Icon="Solid_Cross"
                            PrimaryColor="Black" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnClose"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
                    Click="btnClose_Click"
                    Cursor="Hand"
                    FontSize="20"
                    FontWeight="ExtraBold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0" Text="Close" />
                        <fa:SvgAwesome
                            Height="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Icon="Solid_SkullCrossbones"
                            PrimaryColor="Black" />
                    </StackPanel>
                </Button>
            </Grid>
        </DockPanel>
    </Canvas>
</Window>
