<Window
    x:Class="SistemZaUpravljanjeSadrzajima_projekat_WWII.Pages.EditBattle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa5="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:SistemZaUpravljanjeSadrzajima_projekat_WWII.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Canvas Width="800" Height="600">

        <Path
            x:Name="UIPath"
            Width="800"
            Height="600"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Fill="DarkOliveGreen"
            Stretch="Fill"
            Stroke="DarkGray"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="200,0">
                        <LineSegment Point="150,20" />
                        <LineSegment Point="0,20" />
                        <LineSegment Point="0,50" />
                        <LineSegment Point="150,50" />
                        <LineSegment Point="150,80" />
                        <LineSegment Point="40,80" />
                        <LineSegment Point="10,160" />
                        <LineSegment Point="40,240" />
                        <LineSegment Point="350,240" />
                        <LineSegment Point="380,160" />
                        <LineSegment Point="350,80" />
                        <LineSegment Point="310,80" />
                        <LineSegment Point="310,20" />
                        <LineSegment Point="260,0" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Path
            Canvas.Left="440"
            Canvas.Top="70"
            Width="100"
            Height="100"
            Fill="RED"
            Stretch="Fill"
            Stroke="LightYellow"
            StrokeThickness="2">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="100,0">
                            <PathFigure.Segments>
                                <LineSegment Point="75,20" />
                                <LineSegment Point="0,20" />
                                <LineSegment Point="50,40" />
                                <LineSegment Point="20,70" />
                                <LineSegment Point="100,50" />
                                <LineSegment Point="180,70" />
                                <LineSegment Point="150,40" />
                                <LineSegment Point="200,20" />
                                <LineSegment Point="130,20" />
                                <LineSegment Point="100,0" />



                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
        <DockPanel
            Canvas.Left="110"
            Canvas.Top="220"
            Width="600"
            Height="350">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="208*" />
                    <ColumnDefinition Width="60*" />
                    <ColumnDefinition Width="182*" />
                    <ColumnDefinition Width="150*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Width="129"
                    Height="27"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="ExtraBold"
                    Text="Battle Name:" />
                <Border
                    x:Name="txtBoxBattleNameBorder"
                    Grid.Row="1"
                    Grid.Column="0">
                    <TextBox
                        x:Name="txtBoxBattleName"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="15"
                        GotFocus="BattleNameTextBox_GotFocus"
                        LostFocus="BattleNameTextBox_LostFocus" />
                </Border>

                <Label
                    x:Name="btlNameErrorLbl"
                    Grid.Row="2"
                    Grid.Column="0"
                    Foreground="Red" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="117"
                    Height="27"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="ExtraBold"
                    Text="Battle Date:" />
                <Border
                    x:Name="txtBoxBattleDateBorder"
                    Grid.Row="4"
                    Grid.Column="0">
                    <TextBox
                        x:Name="txtBoxBattleDate"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        FontSize="15"
                        GotFocus="BattleDateTextBox_GotFocus"
                        LostFocus="BattleDateTextBox_LostFocus" />
                </Border>

                <Label
                    x:Name="btlDateErrorLbl"
                    Grid.Row="5"
                    Grid.Column="0"
                    Foreground="Red" />

                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Width="131"
                    Height="26"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="ExtraBold"
                    Text="Battle Image:" />

                <StackPanel
                    Grid.Row="7"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Margin="5"
                    Background="DarkGray">
                    <Image
                        x:Name="imgBattle"
                        Height="90"
                        Stretch="Fill" />
                </StackPanel>

                <Label
                    x:Name="btlImgErrorLbl"
                    Grid.Row="9"
                    Grid.Column="0"
                    Foreground="Red" />

                <Button
                    x:Name="btnBrowse"
                    Grid.Row="10"
                    Width="150"
                    Height="46"
                    Padding="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="btnBrowse_Click"
                    Cursor="Hand"
                    FontSize="20"
                    FontWeight="ExtraBold">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,10,0"
                            FontWeight="ExtraBold"
                            Text="Browse" />
                        <fa5:SvgAwesome
                            Height="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Icon="Regular_Images" />
                    </StackPanel>

                </Button>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Width="184"
                    Height="27"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="ExtraBold"
                    Text="Battle Description:" />
                <Label
                    x:Name="lblWordCount"
                    Grid.Row="8"
                    Grid.Column="3"
                    Width="80"
                    Margin="10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Top"
                    Panel.ZIndex="1000"
                    Content="Words: 0" />
                <DockPanel
                    Grid.Row="1"
                    Grid.RowSpan="8"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Margin="5">
                    <ToolBar x:Name="EditorToolBar" DockPanel.Dock="Top">
                        <ToggleButton
                            x:Name="BoldButton"
                            Width="30"
                            Height="30"
                            Command="EditingCommands.ToggleBold"
                            Content="B"
                            FontWeight="Bold"
                            ToolTip="Bold" />
                        <Separator />
                        <ToggleButton
                            x:Name="ItalicButton"
                            Width="30"
                            Height="30"
                            Command="EditingCommands.ToggleItalic"
                            Content="I"
                            FontStyle="Italic"
                            ToolTip="Italic" />
                        <Separator />
                        <ToggleButton
                            x:Name="UnderlineButton"
                            Width="30"
                            Height="30"
                            Command="EditingCommands.ToggleUnderline"
                            Content="U"
                            ToolTip="Underline" />
                        <Separator />
                        <ComboBox
                            x:Name="FontFamilyCombox"
                            Width="50"
                            IsTextSearchCaseSensitive="False"
                            IsTextSearchEnabled="True"
                            SelectionChanged="FontFamilyCombox_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        FontFamily="{Binding}"
                                        FontSize="12"
                                        Text="{Binding}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Separator />
                        <ComboBox
                            x:Name="FontSizeCombox"
                            Width="50"
                            IsTextSearchCaseSensitive="False"
                            IsTextSearchEnabled="True"
                            SelectionChanged="FontSizeCombox_SelectionChanged"
                            ToolTip="Font size">
                            <ComboBoxItem Content="8" />
                            <ComboBoxItem Content="10" />
                            <ComboBoxItem Content="12" />
                            <ComboBoxItem Content="14" />
                            <ComboBoxItem Content="16" />
                            <ComboBoxItem Content="18" />
                            <ComboBoxItem Content="20" />
                            <ComboBoxItem Content="22" />
                        </ComboBox>
                        <Separator />
                        <xctk:ColorPicker
                            Name="ColorPickerText"
                            Width="70"
                            DisplayColorAndName="True"
                            SelectedColorChanged="ColorPickerText_SelectedColorChanged" />
                    </ToolBar>
                    <RichTextBox
                        x:Name="EditorRichTextBox"
                        FontFamily="Courier New"
                        KeyUp="EditorRichTextBox_KeyUp"
                        SelectionChanged="EditorRichTextBox_SelectionChanged" />

                </DockPanel>
                <Label
                    x:Name="richTxtBoxErrorLbl"
                    Grid.Row="9"
                    Grid.Column="2"
                    Foreground="Red" />
                <Button
                    Name="btnModifyBattle"
                    Grid.Row="10"
                    Grid.Column="2"
                    Width="150"
                    Height="46"
                    Margin="5,0,0,0"
                    Padding="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="btnModifyBattle_Click"
                    Cursor="Hand"
                    FontSize="20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            FontWeight="ExtraBold"
                            Text="Modify" />
                        <fa5:SvgAwesome
                            Height="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Icon="Solid_Crosshairs" />
                    </StackPanel>
                </Button>
                <Button
                    Name="btnClose"
                    Grid.Row="10"
                    Grid.Column="3"
                    Width="150"
                    Height="46"
                    Margin="0,0,5,0"
                    Padding="5"
                    Click="btnClose_Click"
                    Cursor="Hand"
                    FontSize="20"
                    FontWeight="ExtraBold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0" Text="Close" />
                        <fa5:SvgAwesome
                            Height="25"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Icon="Solid_SkullCrossbones" />
                    </StackPanel>
                </Button>
            </Grid>

        </DockPanel>
    </Canvas>
</Window>
